    android:layout_height="match_parent">

    <item android:state_pressed="true">

        <shape>

            <corners android:radius="8dp" />

            <solid
                android:width="1dp"
                android:color="@android:color/white"
                android:dashGap="0dp" />

        </shape>
    </item>

    <item>

        <shape>

            <corners android:radius="8dp" />

            <solid
                android:width="1dp"
                android:color="@android:color/white"
                android:dashGap="0dp" />
        </shape>
    </item>

</selector>