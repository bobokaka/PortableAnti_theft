<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">

    <item android:state_pressed="true">
        <shape>
            <!--圆角-->
            <corners android:radius="25dp" />
            <!--边框线-->
            <stroke android:width="1dp" android:color="#B1B1B1" />
            <!--背景颜色填充-->
            <solid android:width="1dp" android:color="#B1B1B1" android:dashGap="0dp" />
            <!--<gradient-->
            <!--android:endColor="@color/green_nu"-->
            <!--android:startColor="@color/green_u"-->
            <!--android:type="linear" />-->
            <padding android:bottom="6dp" android:left="6dp" android:right="6dp" android:top="6dp" />
        </shape>
    </item>

    <item>
        <shape>
            <!--圆角-->
            <corners android:radius="25dp" />
            <!--边框线-->
            <stroke android:width="1dp" android:color="#E4E4E4" />
            <!--背景颜色填充-->
            <solid android:width="1dp" android:color="@color/white" android:dashGap="0dp" />

            <padding android:bottom="6dp" android:left="6dp" android:right="6dp" android:top="6dp" />
        </shape>
    </item>
</selector>